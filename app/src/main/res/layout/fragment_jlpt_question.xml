<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textQuestionDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="32dp"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestionNumber" />

    <TextView
        android:id="@+id/textAnswer1"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_96"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestionDetail" />

    <TextView
        android:id="@+id/textAnswer2"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestionDetail" />

    <TextView
        android:id="@+id/textAnswer3"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_96"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAnswer1" />

    <TextView
        android:id="@+id/textAnswer4"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAnswer2" />

    <Button
        android:id="@+id/buttonNextQuestion"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/next_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAnswer3" />

</android.support.constraint.ConstraintLayout>
